<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mcmanager.android"
    android:versionCode="1"
    android:versionName="1.0-SNAPSHOT" >

    <supports-screens android:requiresSmallestWidthDp="720" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-sdk android:minSdkVersion="11"/>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="false">
        <activity android:name=".activity.AndroidMediaCenter" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.InfoMovie" >
        </activity>
        <activity android:name=".activity.InfoSerials" />
        <activity android:name=".activity.MediaCenterPlayer" >
        </activity>
        <activity
            android:name="mcmanager.android.settings.Settings"
            android:label="Настройки" >
        </activity>
    </application>

</manifest>