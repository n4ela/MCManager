<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<!-- Аппендери http клиента -->
	<appender name="kinopoisk" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="Append" value="true" />
		<param name="Threshold" value="TRACE" />
		<param name="File" value="../logs/kinopoisk.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd.mm.yyyy HH:mm:ss} %t %c{10}:%M:%L%n%p: %m%n" />
		</layout>
	</appender>

	<!-- Логгер отправки на email -->
    <logger name="kinopoisk" additivity="false">
      <level value="debug"/>
      <appender-ref ref="kinopoisk"/>
    </logger>
</log4j:configuration>